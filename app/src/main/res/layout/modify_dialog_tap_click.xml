<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_toRightOf="@+id/modify_dialog_tap_click_edit"
        android:layout_above="@+id/modify_dialog_tap_click_edit"
        android:src="@drawable/modify_dialog_tap_click_delete"
        android:id="@+id/modify_dialog_tap_click_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:textColor="#D3D3D3"
        android:id="@+id/modify_dialog_tap_click_edit"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/modify_dialog_tap_click_hint"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/modify_dialog_tap_click_edit"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:textSize="8sp"
        android:text="请输入按键"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>